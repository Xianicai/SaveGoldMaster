<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingTop="60dp"
        >
    <TextView
            android:id="@+id/mTvTitle"
            android:layout_width="wrap_content"
            android:text="附近店铺"
            android:textSize="20sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/mTvInfo"
            android:layout_width="wrap_content"
            android:includeFontPadding="false"
            android:text="前往附近店铺进行黄金回收"
            android:textSize="11sp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            app:layout_constraintTop_toBottomOf="@+id/mTvTitle"
            android:layout_marginTop="6dp"
            android:textColor="@color/color_999999"
            android:layout_height="wrap_content"/>
    <TextView
            android:id="@+id/mShowMore"
            android:layout_width="wrap_content"
            android:includeFontPadding="false"
            android:text="查看更多"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            app:layout_constraintTop_toTopOf="@+id/mTvTitle"
            app:layout_constraintBottom_toBottomOf="@+id/mTvTitle"
            android:layout_marginTop="6dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/color_EDA835"
            android:layout_height="wrap_content"/>
    <com.savegoldmaster.utils.adapter.WrapRecyclerView
            android:id="@+id/mRecyclerView"
            android:layout_width="match_parent"
            android:layout_marginTop="46dp"
            android:paddingHorizontal="15dp"
            app:layout_constraintTop_toBottomOf="@+id/mTvTitle"
            android:layout_height="wrap_content"/>
</android.support.constraint.ConstraintLayout>
