<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">
    <ImageView
            android:id="@+id/mImageClose"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:src="@mipmap/ic_close"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="34dp"/>
    <ImageView android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@mipmap/ic_login_logo"
               app:layout_constraintLeft_toLeftOf="parent"
               app:layout_constraintRight_toRightOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:layout_marginTop="86dp"/>
    <LinearLayout
            android:id="@+id/mLayoutAccountLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="151dp"
            app:layout_constraintRight_toLeftOf="@+id/mLayoutFasterLogin"
            app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:id="@+id/mTvAccountLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_C09C60"
                android:text="帐号登录"/>
        <View
                android:id="@+id/mViewAccountLogin"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:layout_marginTop="12dp"
                android:visibility="visible"
                android:layout_gravity="center_horizontal"
                android:background="@color/color_C09C60"/>
    </LinearLayout>
    <LinearLayout
            android:id="@+id/mLayoutFasterLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="151dp"
            app:layout_constraintLeft_toRightOf="@+id/mLayoutAccountLogin"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">
        <TextView
                android:id="@+id/mTvFasterLogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/color_333333"
                android:text="快捷登录"/>
        <View
                android:id="@+id/mViewFasterLogin"
                android:layout_width="20dp"
                android:layout_height="2dp"
                android:visibility="gone"
                android:layout_marginTop="12dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/color_C09C60"/>
    </LinearLayout>
    <EditText
            android:id="@+id/mEdPhoneNum"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="150dp"
            android:inputType="number"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="199dp"
            android:maxLength="11"
            android:hint="请输入手机号"/>
    <View
            android:id="@+id/view_phone_num"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="20dp"
            android:background="@color/color_EEEEEE"
            app:layout_constraintTop_toBottomOf="@+id/mEdPhoneNum"/>
    <ImageView
            android:id="@+id/mImageClearPhoneNum"
            android:layout_width="wrap_content"
            android:visibility="gone"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@+id/mEdPhoneNum"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/mEdPhoneNum"
            android:src="@mipmap/ic_home_close_notice"/>
    <EditText
            android:id="@+id/mEdPassword"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:background="@null"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="150dp"
            android:textSize="14sp"
            android:textColor="@color/color_333333"
            android:digits="0123456789qwertyuioplkjhgfdsazxcvbnmQWERTYUIOPLKJHGFDSAZXCVBNM"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_phone_num"
            android:hint="请输入密码"/>
    <View
            android:id="@+id/view_password"
            android:layout_width="0dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginHorizontal="20dp"
            android:background="@color/color_EEEEEE"
            app:layout_constraintTop_toBottomOf="@+id/mEdPassword"/>
    <ImageView
            android:id="@+id/mImageHiddenPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="@+id/mEdPassword"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="18dp"
            app:layout_constraintBottom_toBottomOf="@+id/mEdPassword"
            android:src="@mipmap/ic_hidden_password"
            android:visibility="gone"/>
    <TextView
            android:id="@+id/mTvGetCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取验证码"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@+id/mEdPassword"
            app:layout_constraintBottom_toBottomOf="@+id/mEdPassword"
            android:textColor="@color/color_C09C60"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="28dp"/>
    <TextView
            android:id="@+id/mTvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            app:layout_constraintTop_toTopOf="@+id/mEdPassword"
            app:layout_constraintBottom_toBottomOf="@+id/mEdPassword"
            android:textColor="@color/color_BCBCBC"
            android:visibility="gone"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="28dp"/>
    <TextView
            android:id="@+id/mTvForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:textSize="12sp"
            android:textColor="@color/color_C09C60"
            app:layout_constraintTop_toBottomOf="@+id/view_password"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"/>
    <TextView
            android:id="@+id/mTvTips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="温馨提示：首次快捷登录即视为注册"
            android:textSize="12sp"
            android:textColor="@color/color_C09C60"
            app:layout_constraintTop_toBottomOf="@+id/view_password"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_marginRight="30dp"/>
    <com.savegoldmaster.utils.view.BorderView
            android:id="@+id/mTvLogin"
            android:layout_width="0dp"
            app:borderViewRadius="2dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:borderViewText="登录"
            android:layout_marginHorizontal="20dp"
            app:borderViewBackgroundColor="#80DDC899"
            android:layout_marginTop="100dp"
            android:gravity="center"
            app:borderViewTextSize="17sp"
            app:borderViewTextColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/view_password"
            android:layout_height="44dp"/>
</android.support.constraint.ConstraintLayout>