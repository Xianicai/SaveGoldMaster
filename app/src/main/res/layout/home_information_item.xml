<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:paddingLeft="5dp"
        android:layout_height="wrap_content">
    <com.savegoldmaster.utils.glide.GlideImageView
            android:id="@+id/mImageCover"
            android:layout_width="90dp"
            app:placeholderImage="@mipmap/ic_info_def"
            android:layout_height="60dp"/>
    <TextView
            android:id="@+id/mTvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:singleLine="true"
            android:includeFontPadding="false"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/mImageCover"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"
            android:ellipsize="end"
            android:textColor="@color/black"/>
    <TextView
            android:id="@+id/mTvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_999999"
            android:textSize="12sp"
            android:includeFontPadding="false"
            android:drawableLeft="@mipmap/ic_home_time"
            android:drawablePadding="5dp"
            app:layout_constraintLeft_toLeftOf="@+id/mTvTitle"
            app:layout_constraintBottom_toBottomOf="@+id/mImageCover"/>
    <View android:layout_width="0dp"
          android:layout_height="1dp"
          android:layout_marginTop="20dp"
          app:layout_constraintTop_toBottomOf="@+id/mImageCover"
          android:background="@color/color_EEEEEE"
          app:layout_constraintBottom_toBottomOf="parent"
          android:layout_marginBottom="20dp"/>
</android.support.constraint.ConstraintLayout>
