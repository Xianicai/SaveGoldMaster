<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="wrap_content">
    <TextView
            android:id="@+id/mTvRecycleGold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="黄金回收"
            android:includeFontPadding="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="上海黄金交易所实时金价"
              android:includeFontPadding="false"
              android:textColor="@color/color_999999"
              app:layout_constraintTop_toTopOf="parent"
              android:layout_marginLeft="20dp"
              android:layout_marginTop="55dp"
              app:layout_constraintLeft_toLeftOf="parent"
              android:textSize="11sp"/>
    <TextView
            android:id="@+id/mTvGoldTrend"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:text="查看金价走势"
            android:drawableRight="@mipmap/ic_gold_trend"
            android:includeFontPadding="false"
            android:drawablePadding="5dp"
            android:gravity="center_vertical"
            android:textColor="@color/color_EDA835"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="34dp"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="12sp"/>
    <TextView
            android:id="@+id/mTvGoldPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="345.76元/克"
            android:includeFontPadding="false"
            android:gravity="center_vertical"
            android:textColor="@color/color_EDA835"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginRight="20dp"
            android:layout_marginTop="123dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textSize="12sp"/>

</android.support.constraint.ConstraintLayout>
