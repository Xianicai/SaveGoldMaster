<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             android:background="@color/white"
                                             android:id="@+id/mParent">
    <com.savegoldmaster.utils.glide.GlideImageView
            android:id="@+id/mImageAd"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
    />
    <ImageView android:layout_width="match_parent"
               android:layout_height="95dp"
               android:src="@mipmap/ic_logo_ad"
               android:scaleType="fitXY"
               android:layout_marginBottom="0dp"
               app:layout_constraintBottom_toBottomOf="parent"
               android:layout_alignParentBottom="true"/>

    <com.savegoldmaster.utils.view.BorderView
            android:id="@+id/mViewNext"
            app:borderViewText="跳过 4s"
            app:borderViewRounded="true"
            android:layout_width="wrap_content"
            app:borderViewBackgroundColor="#66000000"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:paddingHorizontal="13dp"
            android:paddingVertical="7dp"
            app:borderViewTextSize="12sp"
            app:borderViewTextColor="@color/white"
            android:layout_marginBottom="106dp"
            android:layout_marginRight="15dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_alignBottom="@+id/mImageAd"/>
</android.support.constraint.ConstraintLayout>