<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <android.support.constraint.ConstraintLayout
                    android:id="@+id/mLayoutLogin"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:background="@color/white"
                    android:orientation="vertical"
                    android:visibility="visible">
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Hi～欢迎来到存金通"
                          android:textSize="15sp"
                          app:layout_constraintTop_toTopOf="parent"
                          app:layout_constraintLeft_toLeftOf="parent"
                          android:layout_marginTop="75dp"
                          android:layout_marginLeft="20dp"
                          android:includeFontPadding="false"
                          android:textColor="@color/color_333333"
                          android:gravity="center_horizontal"/>
                <com.savegoldmaster.utils.view.BorderView
                        android:id="@+id/mButtonLogin"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        app:borderViewRounded="true"
                        android:layout_marginTop="104dp"
                        android:layout_marginLeft="20dp"
                        app:borderViewBackgroundColor="@color/color_F2B643"
                        app:borderViewText="立即登录"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:layout_gravity="center_horizontal"
                        app:borderViewTextSize="14sp"
                        app:borderViewTextColor="@color/white"/>
            </android.support.constraint.ConstraintLayout>

            <LinearLayout
                    android:id="@+id/mLayoutUserView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="84dp"
                    android:visibility="gone">
                <com.savegoldmaster.utils.glide.GlideImageView
                        android:id="@+id/mImageHead"
                        android:layout_width="90dp"
                        app:placeholderImage="@mipmap/ic_launcher"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="90dp"/>
                <TextView
                        android:id="@+id/mTvName"
                        android:textSize="16sp"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/color_333333"
                        android:text="夏尼采"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/mTvPhoneNum"
                        android:textSize="12sp"
                        android:textColor="@color/color_666666"
                        android:text="17600567656"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="31dp"/>
            </LinearLayout>
            <RelativeLayout
                    android:id="@+id/mLayoutRecycleOrder"
                    android:layout_width="match_parent"
                    android:layout_height="73dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:gravity="center_vertical">
                <TextView android:layout_width="wrap_content"
                          android:text="回收订单"
                          android:paddingLeft="20dp"
                          android:textSize="18sp"
                          android:layout_marginTop="18dp"
                          android:includeFontPadding="false"
                          android:gravity="center_vertical"
                          android:textColor="@color/color_333333"
                          android:layout_height="wrap_content"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="查看回收订单信息来这里哦～"
                          android:includeFontPadding="false"
                          android:layout_marginLeft="20dp"
                          android:layout_marginBottom="18dp"
                          android:layout_alignParentBottom="true"
                          android:textColor="@color/color_999999"
                          android:textSize="11sp"/>
                <TextView android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:textSize="17sp"
                          android:drawablePadding="10dp"
                          android:layout_alignParentRight="true"
                          android:layout_marginRight="22dp"
                          android:gravity="center_vertical"
                          android:drawableRight="@mipmap/icon_arrows_right"
                          android:textColor="@color/color_EDA835"
                />
            </RelativeLayout>

            <RelativeLayout
                    android:id="@+id/mLayoutGold"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical">
                <TextView android:layout_width="wrap_content"
                          android:text="账户余额(元)"
                          android:paddingLeft="20dp"
                          android:textSize="14sp"
                          android:gravity="center_vertical"
                          android:textColor="@color/color_333333"
                          android:layout_height="match_parent"/>
                <TextView
                        android:id="@+id/mTvBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0.0"
                        android:textSize="17sp"
                        android:drawablePadding="10dp"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="115dp"
                        android:drawableRight="@mipmap/icon_arrows_right"
                        android:textColor="@color/color_EDA835"/>
                <View android:layout_width="1dp"
                      android:layout_height="30dp"
                      android:background="@color/color_EEEEEE"
                      android:layout_alignParentRight="true"
                      android:layout_marginRight="104dp"
                      android:layout_centerVertical="true"/>
                <TextView
                        android:id="@+id/mTvTopUp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginRight="67dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_EDA835"
                        android:text="充值"/>
                <TextView
                        android:id="@+id/mTvWithdrawal"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginRight="25dp"
                        android:layout_alignParentRight="true"
                        android:textColor="@color/color_333333"
                        android:text="提现"/>
            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                    android:id="@+id/mRecyclerView"
                    android:layout_marginTop="10dp"
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <com.savegoldmaster.utils.view.BorderView
                    android:id="@+id/mTvServiceTel"
                    android:layout_width="120dp"
                    android:layout_gravity="center_horizontal"
                    app:borderViewBackgroundColor="@color/white"
                    app:borderViewRounded="true"
                    android:layout_marginTop="21dp"
                    app:borderViewStrokeWidth="1dp"
                    android:layout_marginBottom="53dp"
                    app:borderViewStrokeColor="@color/color_999999"
                    android:layout_height="25dp">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="56dp"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:drawablePadding="7dp"
                        android:includeFontPadding="false"
                        android:text="客服电话"
                        android:drawableLeft="@mipmap/ic_phone"
                        android:textSize="12sp"
                        android:textColor="@color/color_333333"/>
            </com.savegoldmaster.utils.view.BorderView>
        </LinearLayout>
        <ImageView android:layout_width="165dp"
                   android:src="@mipmap/ic_mine_mascot"
                   android:layout_height="130dp"
                   app:layout_constraintTop_toTopOf="parent"
                   android:layout_marginTop="68dp"
                   android:layout_marginRight="12dp"
                   app:layout_constraintRight_toRightOf="parent"/>
        <View
                android:id="@+id/mViewOrder"
                android:layout_width="156dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="190dp"
                app:layout_constraintRight_toRightOf="parent"
                android:background="@mipmap/bg_mine_order"
                android:layout_height="73dp"/>
    </android.support.constraint.ConstraintLayout>
</ScrollView>
